app.get('/api/python/kutubxonalar', async (req, res) => {
    try {
        const darslarPath = path.join(__dirname, 'courses', 'python', 'data', 'pythondarslar.json');
        const darslar = await fs.readJson(darslarPath);
        
        const kutubxonalar = {};
        darslar.forEach(dars => {
            if (dars.libraries && Array.isArray(dars.libraries)) {
                dars.libraries.forEach(lib => {
                    if (!kutubxonalar[lib]) {
                        kutubxonalar[lib] = {
                            nomi: lib,
                            darslar: [],
                            category: dars.category
                        };
                    }
                    kutubxonalar[lib].darslar.push(dars.id);
                });
            }
        });
        
        res.json(Object.values(kutubxonalar));
    } catch (error) {
        res.status(500).json({ error: 'Server xatoligi' });
    }
});

// ==================== UMUMIY API ====================
app.get('/api/stats', async (req, res) => {
    try {
        let ciscoDarslar = [];
        let pythonDarslar = [];
        
        const ciscoPath = path.join(__dirname, 'courses', 'cisco', 'data', 'darslar.json');
        const pythonPath = path.join(__dirname, 'courses', 'python', 'data', 'pythondarslar.json');
        
        if (await fs.pathExists(ciscoPath)) {
            ciscoDarslar = await fs.readJson(ciscoPath);
        }
        
        if (await fs.pathExists(pythonPath)) {
            pythonDarslar = await fs.readJson(pythonPath);
        }
        
        res.json({
            cisco: {
                total: ciscoDarslar.length,
                categories: {
                    beginner: ciscoDarslar.filter(d => d.category === 'beginner').length,
                    intermediate: ciscoDarslar.filter(d => d.category === 'intermediate').length,
                    advanced: ciscoDarslar.filter(d => d.category === 'advanced').length,
                    expert: ciscoDarslar.filter(d => d.category === 'expert').length
                }
            },
            python: {
                total: pythonDarslar.length,
                categories: {
                    basic: pythonDarslar.filter(d => d.category === 'basic').length,
                    crypto: pythonDarslar.filter(d => d.category === 'crypto').length,
                    network: pythonDarslar.filter(d => d.category === 'network').length,
                    web: pythonDarslar.filter(d => d.category === 'web').length,
                    malware: pythonDarslar.filter(d => d.category === 'malware').length,
                    exploit: pythonDarslar.filter(d => d.category === 'exploit').length,
                    project: pythonDarslar.filter(d => d.category === 'project').length
                }
            }
        });
    } catch (error) {
        res.status(500).json({ error: 'Server xatoligi' });
    }
});

