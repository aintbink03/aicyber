const express = require('express');
const cors = require('cors');
const path = require('path');
const fs = require('fs-extra');
const dotenv = require('dotenv');

dotenv.config();

// MUHIM: app ni yaratish
const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(cors());
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Static fayllar
app.use(express.static(path.join(__dirname, 'public')));

// Ma'lumotlar papkasini yaratish
const dataDir = path.join(__dirname, 'data');
fs.ensureDirSync(dataDir);

// ==================== CISCO KURSI API ====================
app.get('/api/cisco/darslar', async (req, res) => {
    try {
        const darslarPath = path.join(__dirname, 'courses', 'cisco', 'data', 'darslar.json');
        
        // Fayl borligini tekshirish
        if (!await fs.pathExists(darslarPath)) {
            return res.status(404).json({ error: 'Darslar fayli topilmadi' });
        }
        
        const darslar = await fs.readJson(darslarPath);
        res.json(darslar);
    } catch (error) {
        console.error('Cisco darslari yuklanmadi:', error);
        res.status(500).json({ error: 'Darslar yuklanmadi', details: error.message });
    }
});

app.get('/api/cisco/darslar/:id', async (req, res) => {
    try {
        const darslarPath = path.join(__dirname, 'courses', 'cisco', 'data', 'darslar.json');
        const darslar = await fs.readJson(darslarPath);
        const dars = darslar.find(d => d.id === parseInt(req.params.id));
        
        if (dars) {
            res.json(dars);
        } else {
            res.status(404).json({ error: 'Dars topilmadi' });
        }
    } catch (error) {
        res.status(500).json({ error: 'Server xatoligi' });
    }
});

